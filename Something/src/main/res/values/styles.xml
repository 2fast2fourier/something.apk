<resources>

    <style name="Something.Base.Light" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Required for windowTranslucentStatus support, see values-v19/styles.xml -->
    </style>

    <style name="Something.Base.Dark" parent="android:Theme.Holo">
        <!-- Required for windowTranslucentStatus support, see values-v19/styles.xml -->
    </style>

    <!-- BASE LIGHT THEME -->

    <style name="Something.Dark" parent="Something.Base.Dark">
        <!-- Actionbar color: #222222 -->
        <item name="statusBarBackground">@color/actionbar_background_dark</item>
        <item name="primaryBackground">#000000</item>
        <item name="listBackground">#3E4147</item>
        <item name="footerBackground">#2D2F33</item>
        <item name="listPageDividerBackground">#2D2F33</item>
        <item name="listHeaderTextColor">#FFFFFF</item>
        <item name="listSubTextColor">#999999</item>
        <item name="listDividerColor">#808080</item>
        <item name="webviewBackgroundColor">#000000</item>
        <item name="subforumBackground">#35383D</item>
        <item name="progressBarColor">#2A98FF</item>
        <item name="progressBarColorRefresh">#BEBEBE</item>

        <item name="progressBarColorArray">@array/sbp_colors_dark</item>
        <item name="ptrProgressBarColorArray">@array/sbp_colors_dark</item>

        <item name="listActivatedBackground">@drawable/activated_background_dark</item>

        <item name="inlineBookmarkIcon">@drawable/ic_menu_bookmarks</item>
        <item name="inlineStarIcon">@drawable/inline_menu_bookmark</item>
        <item name="inlineEmptyStarIcon">@drawable/inline_menu_unbookmark</item>
        <item name="inlineFolderIcon">@drawable/ic_action_collection</item>

        <item name="android:actionBarStyle">@style/ActionBar.Solid.Something_dark</item>

        <item name="actionbarBackgroundLayerList">@drawable/actionbar_background_dark</item>
    </style>

    <style name="ActionBar.Solid.Something_dark" parent="@android:style/Widget.Holo.ActionBar.Solid">
        <item name="android:background">?actionbarBackgroundLayerList</item>
        <item name="android:backgroundStacked">?actionbarBackgroundLayerList</item>
        <item name="android:backgroundSplit">?actionbarBackgroundLayerList</item>
    </style>

    <!-- BASE DARK THEME -->

    <style name="Something.Light" parent="Something.Base.Light">
        <!-- Actionbar color: #054D7C -->
        <item name="statusBarBackground">@color/actionbar_background_light</item>
        <item name="primaryBackground">#EEEEEE</item>
        <item name="listBackground">#EEEEEE</item>
        <item name="listPageDividerBackground">#515151</item>
        <item name="footerBackground">#515151</item>
        <item name="listHeaderTextColor">#000000</item>
        <item name="listSubTextColor">#444444</item>
        <item name="listDividerColor">#808080</item>
        <item name="webviewBackgroundColor">#DDDDDD</item>
        <item name="subforumBackground">#DDDDDD</item>
        <item name="progressBarColor">#2A98FF</item>
        <item name="progressBarColorRefresh">#BEBEBE</item>

        <item name="progressBarColorArray">@array/sbp_colors_light</item>
        <item name="ptrProgressBarColorArray">@array/sbp_colors_light</item>

        <item name="listActivatedBackground">@drawable/activated_background_light</item>

        <item name="inlineBookmarkIcon">@drawable/ic_menu_bookmarks_light</item>
        <item name="inlineStarIcon">@drawable/inline_menu_bookmark_light</item>
        <item name="inlineEmptyStarIcon">@drawable/inline_menu_unbookmark_light</item>
        <item name="inlineFolderIcon">@drawable/ic_action_collection_light</item>

        <item name="android:actionBarStyle">@style/ActionBar.Solid.Something_light</item>

        <item name="actionbarBackgroundLayerList">@drawable/actionbar_background_light</item>
    </style>

    <style name="ActionBar.Solid.Something_light" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">?actionbarBackgroundLayerList</item>
        <item name="android:backgroundStacked">?actionbarBackgroundLayerList</item>
        <item name="android:backgroundSplit">?actionbarBackgroundLayerList</item>
    </style>

    <!-- FORUM THEMES -->

    <style name="Something.YOSPOS" parent="Something.Dark">

    </style>

    <style name="Something.AmberPOS" parent="Something.Dark">

    </style>

    <style name="Something.FYAD" parent="Something.Light">

    </style>

</resources>
