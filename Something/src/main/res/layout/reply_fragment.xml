<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?listBackground"
    android:fitsSystemWindows="true">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:scrollbars="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="@string/reply_username_hint"
        android:imeOptions="flagNoExtractUi"
        android:textCursorDrawable="@null"
        android:textColor="?listHeaderTextColor"
        android:id="@+id/reply_username"
        android:inputType="textNoSuggestions|textCapWords"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:hint="@string/reply_title_hint"
        android:scrollbars="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:imeOptions="flagNoExtractUi"
        android:textCursorDrawable="@null"
        android:textColor="?listHeaderTextColor"
        android:id="@+id/reply_title"
        android:inputType="textAutoCorrect|textCapSentences"
        android:layout_below="@+id/reply_username"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:background="#11000000"
        android:scrollbars="vertical"
        android:layout_margin="10dp"
        android:imeOptions="flagNoExtractUi"
        android:textCursorDrawable="@null"
        android:textColor="?listHeaderTextColor"
        android:id="@+id/reply_content"
        android:inputType="textMultiLine|textLongMessage|textCapSentences|textAutoCorrect"
        android:layout_below="@+id/reply_title"/>

    <fr.castorflex.android.smoothprogressbar.SmoothProgressBar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:visibility="gone"
        android:id="@+id/progressbar"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:indeterminate="true"
        app:spb_sections_count="6"
        app:spb_colors="?progressBarColorArray"
        app:spb_stroke_width="4dp"
        app:spb_stroke_separator_length="0px"
        />
    </RelativeLayout>