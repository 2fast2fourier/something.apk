<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/page_select_first"
        android:id="@+id/page_select_first"
        android:padding="20dp"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@+id/page_number_picker"
        android:layout_alignBottom="@+id/page_number_picker"
        android:gravity="center_vertical"
        android:layout_toLeftOf="@+id/page_number_picker" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/page_number_picker"
        android:orientation="vertical"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/page_select_last"
        android:id="@+id/page_select_last"
        android:layout_toRightOf="@+id/page_number_picker"
        android:padding="20dp"
        android:layout_marginLeft="10dp"
        android:layout_alignBottom="@+id/page_number_picker"
        android:layout_alignTop="@+id/page_number_picker"
        android:gravity="center_vertical" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/page_select_submit"
        android:id="@+id/page_select_button"
        android:layout_below="@+id/page_number_picker"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_marginTop="4dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>