<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <android.support.v4.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_drawer"
        tools:context=".MainActivity"
        android:background="?primaryBackground" >
        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="net.fastfourier.something.PrivateMessageFragment"
            android:id="@+id/pm_fragment" />
        <fragment
            android:layout_width="@dimen/pm_list_width"
            android:layout_height="match_parent"
            android:name="net.fastfourier.something.PrivateMessageListFragment"
            android:id="@+id/pm_list_fragment"
            android:layout_gravity="left"/>
    </android.support.v4.widget.DrawerLayout>
</FrameLayout>