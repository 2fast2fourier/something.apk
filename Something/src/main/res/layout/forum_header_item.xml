<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Menu Item Text"
        android:id="@+id/menu_item_title"
        android:layout_marginLeft="8dp"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:textColor="?listHeaderTextColor"
        android:textStyle="bold" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_divider">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:id="@+id/menu_item_bookmarks"
            android:src="?inlineBookmarkIcon"
            android:layout_gravity="center"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:background="?listActivatedBackground" />
    </FrameLayout>
</RelativeLayout>